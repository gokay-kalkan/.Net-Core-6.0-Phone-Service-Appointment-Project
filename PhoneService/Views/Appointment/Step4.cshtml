@model PhoneService.Dtos.AppointmentDtos.AppointmentCreateDto
@{
    ViewData["Title"] = "Step4";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start Services Details Section -->
<section class="services-details-area section-padding pt-60">
    <div class="container">
        <div class="row pt-40">
            <div class="col-lg-8 col-md-12">
                <div class="services-details-content">
                    <form asp-action="Step4" method="post">
                    <h2>Last step—enter your contact info</h2>
                    <h3>This’ll speed up check-in when you get here.</h3>

                    <div class="contact-form contact-form-1 pt-30">
                        <p class="form-message"></p>
                        
                            <div class="row">
                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        <input type="text" asp-for="CustomerName" id="name" class="form-control" required placeholder="Name">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        <input type="text" asp-for="CustomerSurname" id="name" class="form-control" required placeholder="Surname">
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <input type="email" asp-for="CustomerEmail" id="email" class="form-control" required placeholder="E-mail">
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <input type="text"asp-for="CustomerPhone" id="phone" required class="form-control" placeholder="Phone Number">
                                    </div>
                                    <p>If your phone doesn't work, you can use an alternate number.</p>
                                </div>
                            </div>
                      
                        <p class="pt-20"><b>By continuing, you agree to the Terms of Service and Privacy Policy.</b></p>
                    </div>

                    <div class="  pt-30">
                        <a class="default-btn2" href="service-app-2.html">&larr; Back<span></span></a>
                            <button class="default-btn" style="margin-left: 5rem;" type="submit"> Complete the order <span></span></button>
                    </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-4 col-md-12">
                <aside class="services-widget">
                    <section class="widget widget_categories">
                        <img src="assets/img/ip14.png" style="width: 35%" />
                        <span style="margin-left: 10px"><b>Apple iPhone 14</b></span>
                        <div class="pt-30"
                             style="border-bottom: 2px solid #7a7a7a3d"></div>
                        <h5 class="pt-30">Visit details</h5>
                        <ul class="footer-contact-list">
                            <li>
                                <i class="fa fa-location-dot"></i>&emsp; Store location
                            </li>
                            <li><i class="fa fa-calendar"></i>&emsp; Date and time</li>
                            <li><i class="fa fa-comment"></i>&emsp; Contact details</li>
                        </ul>
                        <div class="pt-30"
                             style="border-bottom: 2px solid #7a7a7a3d"></div>
                    </section>
                </aside>
            </div>
        </div>
    </div>
</section>
<!-- End Services Details Section -->

