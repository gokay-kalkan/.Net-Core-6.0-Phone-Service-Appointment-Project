
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout.cshtml";
}

@model List<Problem>

@if (Model.Count == 0)
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="alert alert-success">no problems added</div>
            </div>
        </div>
    </div>
}

else
{
    <table class="table table-bordered table table-striped" id="table">
        <tr>
            <th>Description Problem</th>

            <th>Delete</th>
            <th>Update</th>
        </tr>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Description</td>

                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                </tr>

            }
        </tbody>
    </table>

}
<br>
<a class="btn btn-primary" asp-action="Create">Create</a>


